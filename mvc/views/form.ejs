<%- include('partials/header.ejs'); %>
<% const { country } = locals; %>

<h1><%= title %></h1>

<% if(country) { %>
    <form action="/countries/<%= country.identifier %>?_method=PUT" method="post" autocomplete="off">
    <% } else { %>
    <form action="/countries" method="post" autocomplete="off">
        <% } %>
        <input type="text" name="name" autofocus placeholder="Country Name" <% if(country) { %>value="<%= country.name %>"<% } %> >
        <input type="submit" class="btn" value="Submit">
    </form>

 <%- include('partials/footer.ejs'); %>